* {
  box-sizing border-box
}

body, button, input, optgroup, select, textarea {
  font-family 'microsoft yahei'
}

$flat-button {
  height 24px
  line-height @height
  border none
  padding-top 0
  padding-bottom 0
  font-size 12px
  cursor pointer
}

$widget-title {
  font-size 14px
  line-height 24px
  margin 0
  background steelblue
  color white
  font-weight bold
  text-align center
}

.widgets {
  width 250px
  position absolute
  left 8px
  top @left
  background rgba(255, 255, 255, 0.9)
}

.mac-list-widget {
  border 1px solid steelblue

  .title {
    @extends $widget-title
  }

  .mac-list {
    display flex
    flex-flow column

    .mac-item {
      display flex
      align-items center
      height 32px
      border-top 1px solid steelblue
      &:first-child {
        border-top none
      }
      transition background 0.3s ease-in
      &:hover {
        background rgba(51, 51, 51, 0.25)
      }

      .mac-color > .color {
        width 16px
        height 16px
        margin 8px
        border-radius 50%
      }

      .mac-text {
        width 160px
        margin 0
        margin-left 5px
        line-height @height
        font-size 14px
        font-family monospace, 'microsoft yahei'
      }

      .mac-delete {
        @extends $flat-button
        margin-left auto
      }

      .mac-check {
        display block
        height @height
        width 16px
        margin-left 8px
        margin-right 4px
      }
    }
  }

  .new-mac-item {
    padding-left 32px
    height 32px
    display flex
    align-items center
    border-top 1px solid steelblue

    input {
      height 24px
    }

    button {
      @extends $flat-button
      margin-left auto
      margin-right 4px
    }
  }
}

.floor-list-widget {
  margin-top 16px
  border 1px solid steelblue
  .title {
    @extends $widget-title
  }
  .floor-list {
    .floor-item {
      position relative
      display flex
      height 32px
      border-top 1px solid steelblue
      &:first-child {
        border-top none
      }
      cursor pointer
      transition background 0.3s ease-in
      &:hover {
        background rgba(51, 51, 51, 0.25)
      }

      .bar {
        position absolute
        left 0
        top 0
        bottom 0
      }

      .floor-text {
        width 160px
        line-height 32px
        padding-left 8px
        margin 0
        .count {
          margin-left 8px
        }
      }
      .floor-radio {
        display block
        height @height
        width 16px
        margin-left auto
        margin-right 4px
        pointer-events none
      }
    }
  }
}

.duration-widget {
  margin-top 16px
  border 1px solid steelblue
  .title {
    @extends $widget-title
  }

  p {
    margin 0
    line-height 32px
    font-size 14px
  }

  .duration
  .span-info {
    padding 0 8px
  }
  .brush-container {
    display block
    width 100%
    height 60px
    margin-bottom 8px
    background #eef2f5
    .selection {
      fill #2196F3
    }
  }
}

.reset-transform {
  @extends $flat-button
  position absolute
  top 16px
  right 16px
}

.floor-map {
  display block
  width 100vw
  height 100vh
  font-family "Microsoft Yahei"

  text {
    pointer-events none
  }
}

.svg-wrapper {
  overflow hidden
}

.tooltip-wrapper {
  position absolute
  pointer-events none
  > div {
    position absolute
    background rgba(0, 0, 0, 0.6)
    color white
    padding 8px
    transform translate(16px, 16px)
    font-family monospace
    font-size 20px
  }
}
